<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Attributes for GaugeView -->
    <declare-styleable name="GaugeView">
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="gaugeTitle" format="string" />
        <attr name="unit" format="string" />
        <attr name="needleColor" format="color" />
    </declare-styleable>

    <!-- Attributes for ProgressGaugeView -->
    <declare-styleable name="ProgressGaugeView">
        <attr name="maxProgress" format="float" />
        <attr name="gaugeTitle" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <!-- Attributes for NissanGaugeBarView -->
    <declare-styleable name="NissanGaugeBarView">
        <attr name="max_value" format="float" />
        <attr name="segment_count" format="integer" />
        <attr name="segment_color" format="color" />
        <attr name="segment_off_color" format="color" />
        <attr name="bar_background_color" format="color" />
    </declare-styleable>

    <!-- Attributes for NissanVerticalGaugeBarView -->
    <declare-styleable name="NissanVerticalGaugeBarView">
        <attr name="max_value" />
        <attr name="segment_count" />
        <attr name="segment_color" />
        <attr name="segment_off_color" />
        <attr name="bar_background_color" />
    </declare-styleable>
</resources>
